<Window x:Class="DecHex_Converter.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DecHex_Converter"
        mc:Ignorable="d"
        Title="Settings" Height="200" Width="600">
    <Grid>
        <Label Content="Make DecHex Converter window always on top?" HorizontalAlignment="Left" Margin="10,24,0,0" VerticalAlignment="Top" FontSize="20"/>
        <CheckBox x:Name="CheckBox_AlwaysOnTop" Content="" HorizontalAlignment="Left" Margin="500,25,0,0" VerticalAlignment="Top" FontSize="16" Click="CheckBox_Click">
            <CheckBox.LayoutTransform>
                <ScaleTransform ScaleX="2" ScaleY="2" />
            </CheckBox.LayoutTransform>
        </CheckBox>
        <Label Content="Enable dark theme?" HorizontalAlignment="Left" Margin="10,88,0,0" VerticalAlignment="Top" FontSize="20"/>
        <CheckBox x:Name="CheckBox_EnableDarkTheme" Content="" HorizontalAlignment="Left" Margin="500,89,0,0" VerticalAlignment="Top" FontSize="16" Click="CheckBox_Click_1">
            <CheckBox.LayoutTransform>
                <ScaleTransform ScaleX="2" ScaleY="2" />
            </CheckBox.LayoutTransform>
        </CheckBox>

    </Grid>
</Window>
